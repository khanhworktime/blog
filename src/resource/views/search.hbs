<div class="search-form mt-3 p-5">
    <form method="POST">
        <div class="mb-3">
            <label for="q" class="form-label">Từ khóa</label>
            <input name="q" type="text" class="form-control" id="search-input" placeholder="Nhập từ khóa">
        </div>
        <div class="mb-3">
            <label for="gender" class="form-label">Giới tính</label>
            <select name="gender" class="form-control" id="gender-input" placeholder="Nhập từ khóa">
                <option value="">--Chọn giới tính--</option>
                <option value="0">Nam</option>
                <option value="1">Nữ</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>
</div>